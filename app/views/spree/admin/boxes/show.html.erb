<% content_for :page_title do %>
  <%= Spree.t(:editing_box) %> &ldquo;<%= @box.name %>&rdquo;
<% end %>

<% content_for :page_actions do %>
  <li id="new_box_link">
    <%= button_to "New Box", { :action => "new" }, :method => :get %>
  </li>
<% end if can?(:create, Bm::Box) %>

<div data-hook="admin_product_form_description">
	<%= form_for @box, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>
		<%= f.label :cover %>
	  <%= f.file_field :cover %>
	<% end %>
</div>

<%= render partial: "add_product"%>

<% if @box.products.count == 0 %>
  <div class="no-objects-found">
    <%= Spree.t(:your_order_is_empty_add_product)%>
  </div>
<% end %>

<div class="form-buttons filter-actions actions" data-hook="buttons">
    <%= button Spree.t('actions.create'), 'ok' %>
    <span class="or"><%= Spree.t(:or) %></span>
    <%= link_to_with_icon 'remove', Spree.t('actions.cancel'), admin_box_url, :class => 'button' %>
</div>
  
<%= render partial: "form"%>

<%= form_for @box, url: {action: "update"}, html: {class: "nifty_form"} do |f| %>
  <div data-hook="admin_image_form_fields">
    <div class="four columns alpha">
      <div data-hook="file" class="field">
        <%=  %><br>
        <%= f.label :cover, Spree.t(:filename) %><br>
        <%= f.file_field :cover %>
      </div>
    </div>
  </div>
<% end %>

<div class="clear"></div>

<div class="clear"></div>

<%= link_to_with_icon 'picture-o', Spree.t(:images), admin_box_imagecovers_url(@box) %>


