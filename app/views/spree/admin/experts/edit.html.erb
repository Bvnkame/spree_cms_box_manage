<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:back_to_experts_list), admin_experts_url, :icon => 'arrow-left' %></li>
  <% if can?(:create, Bm::Expert) %>
    <li id="new_expert_link">
      <%= button_link_to Spree.t(:new_expert), new_admin_expert_url, {:icon => 'plus', :id => 'admin_new_expert' } %>
    </li>
  <% end %>
<% end %>

<%= render :partial => 'spree/admin/shared/box_sub_menu'%>

<%= render :partial => 'spree/admin/shared/expert_tabs', :locals => {:current => 'Expert Details'}%>

<%= form_for @expert, method: :put, :url => admin_expert_url(@expert), :html => {:id => "edit_expert", :multipart => true} do |f| %>
  <fieldset data-hook="edit-expert">
    <%= render :partial => "form", :locals => {:f => f} %>

    <div class="form-buttons filter-actions actions" data-hook="buttons">
        <%= button Spree.t('actions.update'), 'ok' %>
        <span class="or"><%= Spree.t(:or) %></span>
        <%= link_to_with_icon 'remove', Spree.t('actions.cancel'), admin_expert_url, :class => 'button' %>
    </div>
  </fieldset>
<% end %>